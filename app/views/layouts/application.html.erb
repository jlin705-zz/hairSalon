<!DOCTYPE html>
<html>
<head>
  <title>NacyHairSolon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<ul class="nav nav-tabs">
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "Prices", prices_path %></li>
			<li><%= link_to "Appointment", welcome_apointment_path %></li> 
			<li><%= link_to "About Us", welcome_aboutus_path %></li>
			<li><%= link_to "Contact Us", welcome_contactus_path %></li>
			<% if current_user %>
				<li class="pull-right"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
			<% else %>
				<li class="pull-right"><%= link_to "Sign Up", new_user_registration_path %></li>
				<li class="pull-right"><%= link_to "Sign In", new_user_session_path %></li>
			<% end %>
		</ul>

		<% if flash[:notice] %>
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:notice]%>
			</div>
		<% elsif flash[:error] %>
			<div class="alert alert-error">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:error]%>
			</div>
		<% elsif flash[:alert] %>
			<div class="alert">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:alert]%>
			</div>
		<%end%>
		<%= yield %>

	</div>

</body>
</html>
