<h1>Listing prices</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Service</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @prices.each do |price| %>
          <tr>
            <td><%= price.service %></td>
            <td><%= price.price %></td>
            <td><%= link_to 'Show', price, class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Edit', edit_price_path(price), class: 'btn btn-mini' %></td>
            <td><%= link_to 'Destroy', price, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Price', new_price_path %>
